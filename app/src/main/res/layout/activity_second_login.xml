<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tektak.myapplication.SecondLogin"
    android:background="#ff9476">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/child"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="72dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordSecondLogin"
        android:layout_below="@+id/parent"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/passwordCheck"
        android:src="@drawable/arrow2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/parent"
        android:layout_toEndOf="@+id/passwordSecondLogin" />

    <TextView
        android:textColor="#922"
        android:text="Incorrect password!!"
        android:id="@+id/incorrectMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordSecondLogin"
        android:layout_alignParentStart="true" />


</RelativeLayout>
